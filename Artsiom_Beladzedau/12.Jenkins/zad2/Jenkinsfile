pipeline {
  agent {
  label'slave-1'
  }
  stages {
    stage("Install docker") {
         steps {
             sh '''
              sudo apt update && sudo apt install docker
        '''
      }
    } 
     
             stage("Build docker container") {
            steps {
                
                sh '''
                sudo docker rmi speedtest -f
                sudo docker build /home/Docker -f /home/Docker/Dockerfile1 -t speedtest
                sudo docker run speedtest
                curl -X POST https://api.telegram.org/bot_serret/sendMessage -d "chat_id=chat_id" -d text="Job Jenkins speedtest complite"
                docker ps -a
                '''
            }
        }
  }
   post {
       
        always {
            cleanWs()
            
            }
        }
    }
